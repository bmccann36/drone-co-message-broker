{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "globals": {
    "chrome": true
  },
  "plugins": ["mocha"],
  "rules": {
    "no-console": 0,
    "semi": ["warn", "always", { "omitLastInOneLineBlock": true }],
    "no-empty": [
      1,
      {
        "allowEmptyCatch": true
      }
    ]
  },
  "extends": ["eslint:recommended"]
}
